<p id="notice"><%= notice %></p>

<h1>Reptiles</h1>

<table>
  <thead>
    <tr>
      <th>Tyep1</th>
      <th>Tyep2</th>
      <th>Aname</th>
      <th>Sex</th>
      <th>Size</th>
      <th>Max</th>
      <th>Area</th>
      <th>Description</th>
      <th>Price</th>
      <th>Sales status</th>
      <th>Arrival day</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reptiles.each do |reptile| %>
      <tr>
        <td><%= reptile.tyep1 %></td>
        <td><%= reptile.tyep2 %></td>
        <td><%= reptile.aname %></td>
        <td><%= reptile.sex %></td>
        <td><%= reptile.size %></td>
        <td><%= reptile.max %></td>
        <td><%= reptile.area %></td>
        <td><%= reptile.description %></td>
        <td><%= reptile.price %></td>
        <td><%= reptile.sales_status %></td>
        <td><%= reptile.arrival_day %></td>
        <td><%= reptile.user_id %></td>
        <td><%= link_to 'Show', reptile %></td>
        <td><%= link_to 'Edit', edit_reptile_path(reptile) %></td>
        <td><%= link_to 'Destroy', reptile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

