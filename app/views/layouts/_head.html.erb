<title><%= full_title(yield(:title))%></title>
<meta charset="UTF-8">
<!-- レシポンシブ対応 -->
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<%= csrf_meta_tags %>
<%= csp_meta_tag %>

<!-- gon gem -->
<%= include_gon %>

<!-- webpacker -->
<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

<%# assets %>
<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

<!-- スライダー -->
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.css">
<script src="https://unpkg.com/swiper/swiper-bundle.js"></script>

<!-- ファビコン -->
<%= favicon_link_tag('favicon.ico') %>

<!-- FontAwesome -->
<script src="https://kit.fontawesome.com/5f392e2ea2.js" crossorigin="anonymous"></script>

<!-- GoogleMapAPI -->
<script src="http://maps.google.com/maps/api/js?key=AIzaSyCmga5t9yneu0QMXToEOgdBywG1I-MhWTs&language=ja"></script>
<style>
  html { height: 100% }
  body { height: 100% }
  #map { height: 20%; width: 90%; margin: 5px auto 0;}
</style>

<!-- community-geocoder.js /* 精度が悪く使えないので却下 */ -->
<script src="https://cdn.geolonia.com/community-geocoder.js"></script>
