<% Rails.application.config.another_logger.debug "[d] view: users/index id=#{@user.id}" %>

<div style="padding-top: 40px;">

<!-- マイページ -->
<div class="container">
  <h1 class="shop-ttl"><%= @user.shop_name %></h1>
  <div class="row justify-content-center show">
      
      <!-- サイドメニュー -->
      <div class="col-lg-3 col-xl-3">
      
        <div class="regist-pd">
          <%= link_to new_user_reptile_path(current_user), style:"text-decoration: none;" do %>
            <h2 class="regist botton-hover">生体登録</h2>
          <% end %>
        </div>
        
        <!-- 生体カテゴリー -->
        <h2 class="menu-ttl">販売生体
          <div class="arrow absolute ds-sp"><img src="image/arrow.png" alt=""></div>
        </h2>
        
        <ul class="menu-list">
          <%= link_to "#", style:"text-decoration: none;" do %>
            <li class="reptile-item">ヘビ
              <div style="float: right; margin-right: auto;">
                <i class="fas fa-chevron-right"></i>
              </div>
            </li>
          <% end %>
          <%= link_to "#", style:"text-decoration: none;" do %>
            <li class="reptile-item">トカゲ・ヤモリ
              <div style="float: right; margin-right: auto;">
                <i class="fas fa-chevron-right"></i>
              </div>
            </li>
          <% end %>
          <%= link_to "#", style:"text-decoration: none;" do %>
            <li class="reptile-item">カメ
              <div style="float: right; margin-right: auto;">
                <i class="fas fa-chevron-right"></i>
              </div>
            </li>
          <% end %>
          <%= link_to "#", style:"text-decoration: none;" do %>
            <li class="reptile-item">カメレオン
              <div style="float: right; margin-right: auto;">
                <i class="fas fa-chevron-right"></i>
              </div>
            </li>
          <% end %>
          <%= link_to "#", style:"text-decoration: none;" do %>
            <li class="reptile-item">カエル
              <div style="float: right; margin-right: auto;">
                <i class="fas fa-chevron-right"></i>
              </div>
            </li>
          <% end %>
          <%= link_to "#", style:"text-decoration: none;" do %>
            <li class="reptile-item list-item">奇虫・その他
              <div style="float: right; margin-right: auto;">
                <i class="fas fa-chevron-right"></i>
              </div>
            </li>
          <% end %>
        </ul>
        <!-- 生体カテゴリー -->
        
        <!-- 入荷情報 -->
        <h2 class="arrival-ttl relative mt-5">新入荷
          <div class="arrow absolute ds-sp"><img src="image/arrow.png" alt=""></div>
        </h2>
        
        <ul class="menu-list">
          <li class="arrival-item">
              <p class="arrival-day">2020年◯月◯日入荷</p>
              <!-- ↓リンク入れて商品ページに飛ぶようにする -->
              <p class="arrival-animal"><a href="#">メキシカンブラックキングスネーク</a></p>
          </li>
          <li class="arrival-item">
              <p class="arrival-day">2020年◯月◯日入荷</p>
              <!-- ↓リンク入れて商品ページに飛ぶようにする -->
              <p class="arrival-animal"><a href="#">メキシカンブラックキングスネーク</a></p>
          </li>
          <li class="arrival-item">
              <p class="arrival-day">2020年◯月◯日入荷</p>
              <!-- ↓リンク入れて商品ページに飛ぶようにする -->
              <p class="arrival-animal"><a href="#">メキシカンブラックキングスネーク</a></p>
          </li>
          <li class="arrival-item">
              <p class="arrival-day">2020年◯月◯日入荷</p>
              <!-- ↓リンク入れて商品ページに飛ぶようにする -->
              <p class="arrival-animal"><a href="#">メキシカンブラックキングスネーク</a></p>
          </li>
        </ul>
        <!-- 入荷情報 -->
        
        <!-- お店のSNS -->
        <div class="sns-box-wrap wrap-trigger">
          <% if @user.twitter.present? || @user.instagram.present? %>
            <h2 class="sns-ttl relative mt-5">SNS
              <div class="arrow absolute ds-sp"><img src="image/arrow.png" alt=""></div>
            </h2>
          <% end %>
          <!-- twitter -->
          <% if @user.twitter.present? %>
            <div class="sns-box">
              <a class="twitter-timeline" data-width="100%" data-height="100%" data-theme="dark" href=<%= @user.twitter %> ></a>
              <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
            </div>
          <% end %>
          <!-- twitter -->
          
          <!-- Instagram -->
          <% if @user.instagram.present? %>
            <div style="padding: 10px 0;">
              <%= @user.instagram.html_safe %>
            </div>
          <% end %>
          <!-- Instagram -->
        </div>
        <!-- お店のSNS -->
        
      </div>
      <!-- サイドメニュー -->
      
      
      <!-- メイン -->
      <div class="col-sm-12 col-md-12 col-lg-9 col-xl-9">
          <div class="row justify-content-center my-3">
            <% if current_user.shop_image.present? %>
              <%= image_tag current_user.shop_image.url, :size =>'400x200' %>
            <% end %>
          </div>
          
          <%# <h3>店舗情報</h3> %>
          <div class="shop-data-list">
              <dl class="shop-data-item flex align-center">
                  <dt>所在地</dt>
                  <dd><%= @user.address %></dd>
              </dl>
              <dl class="shop-data-item flex align-center">
                  <dt>アクセス方法</dt>
                  <!-- googlemapへスクロール -->
                  <dd class="anchor"><a href="#googlemap"><%= @user.howto_access %></a></span></dd>
              </dl>
              <dl class="shop-data-item flex">
                  <dt>営業時間</dt>
                  <dd><%= @user.business_hours %></dd>
              </dl>
              <dl class="shop-data-item flex">
                  <dt>定休日</dt>
                  <dd><%= @user.holiday %></dd>
              </dl>
              <dl class="shop-data-item flex">
                  <dt>電話番号</dt>
                  <dd><%= @user.tel %></dd>
              </dl>
              <dl class="shop-data-item flex">
                  <dt>ホームページ</dt>
                  <!-- 別タブでホームページに移動 -->
                  <dd><a href=<%= @user.url %> target="_blank"><%= @user.url %></a></dd>
              </dl>
              <dl class="shop-data-item flex">
                  <dt>SNS(twitter)</dt>
                  <!-- 別タブでSNSに移動 -->
                  <dd><a href=<%= @user.twitter %> target="_blank"><%= @user.twitter %></a></dd>
              </dl>
              <dl class="shop-data-item flex">
                  <dt>取扱い生体</dt>
                  <dd><%= simple_format(@user.handling_animals) %></dd>
              </dl>
              <dl class="shop-data-item flex">
                  <dt>取扱い餌</dt>
                  <dd><%= simple_format(@user.handling_feeds) %></dd>
              </dl>
              <dl class="shop-data-item flex">
                  <dt>取扱い用品</dt>
                  <dd><%= simple_format(@user.handling_goods) %></dd>
              </dl>
              <dl class="shop-data-item flex">
                  <dt>当店の特徴</dt>
                  <dd><%= simple_format(@user.feature) %></dd>
              </dl>
          </div>
          
          <% if @user.map_info.present? %>
          <div class="col-12 googlemap">
              <iframe src=<%= @user.map_info %> width="100%" height="100%" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
          </div>
          <% end %>
          <!--
          <div id="map"></div>
          <script>
            var MyLatLng = new google.maps.LatLng(35.5419941, 139.4453761);
            var Options = {
            zoom: 15,      //地図の縮尺値
            center: MyLatLng,    //地図の中心座標
            mapTypeId: 'roadmap'   //地図の種類
            };
            var map = new google.maps.Map(document.getElementById('map'), Options);
          </script>
          -->
          <div class="col-4">
            <%= link_to "ユーザー情報の編集",edit_user_registration_path(edit_mode: "info"), class:"btn btn-sm btn-primary px-2 my-2" %>
            
            <% unless @user.provider.present? %>
              <%= link_to "パスワードの変更",edit_user_registration_path(edit_mode: "pass"), class:"btn btn-sm btn-primary px-3 my-2" %>
            <% end %>
            
            <%= link_to "アカウントの削除",edit_user_registration_path(edit_mode: "destroy"), class:"btn btn-sm login_out btn-hover px-3 my-2" %>
          </div>
          
      </div>
      
  </div>
</div>
