<% Rails.application.config.another_logger.debug "[d] view reptileInfo id=#{@user.id}" %>
 
<!-- 生体詳細 -->
<section class="search-content"> 
  <ul class="search-list">
    <% @reptile_type.each do |reptile| %>
    <% Rails.application.config.another_logger.debug "[d] view reptileInfo reptile=#{reptile.inspect}" %>
    <!-- ループ -->
    <li class="search-item flex align-center">
      <div class="photo">
        <% if reptile.image.present? %>
          <%#= image_tag reptile.image.url, "#" %>
          <%= image_tag reptile.image.url, :width => "300", :height => "200", id: "margin5px" %>
        <% else %>
          <%= link_to image_tag("/uploads/TestFolder/noimage.jpg"), "#" %>
        <% end %>
      </div>
      
      <ul class="txt-list">
        <li class="txt-item flex align-center">
          <p class="species">種類</p>
          <p class="name"><%= reptile.type1 %></p>
        </li>
        <li class="txt-item flex align-center">
          <p class="morph">モルフ</p>
          <p class="name"><%= reptile.type2 %></p>
        </li>
        <li class="txt-item flex align-center">
          <p class="gender">性別</p>
          <p class="name"><%= reptile.sex %></p>
        </li>
        <li class="txt-item flex align-center">
          <p class="price">価格</p>
          <p class="name"><%= reptile.price %></p>
        </li>
      </ul>
    </li>
    <!-- ループ：end -->
    <% end %>
    <li class="search-item flex align-center"></li>
  </ul>
</section>
<!-- 生体詳細：end -->
