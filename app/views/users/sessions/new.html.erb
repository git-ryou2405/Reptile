<% Rails.application.config.another_logger.debug "[d] view: ログイン画面" %>

<div class="container-fluid text-center">
  <h4>Reptiles Farm</h4><br>
  <div class="row justify-content-center">
    <div class="col-9 col-sm-8 col-md-7 col-lg-7 col-xl-6 bgc-333 align-self-center">
      <h4>ログイン</h4>
      <% @monitor = "ログイン" %>
      
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%#= f.label :email %><br>
          <%= f.email_field :email, :placeholder => "メールアドレス", autofocus: false, autocomplete: "email" %>
        </div>

        <div class="field">
          <%#= f.label :password %><br>
          <%= f.password_field :password, :placeholder => "パスワード", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions"><br />
          <%= f.submit "ログイン", class:"btn btn-md btn-info" %>
        </div>
      <% end %><br />

      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
